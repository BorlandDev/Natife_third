<resources>
    <!-- Base application theme. -->
    <style name="Theme.Natife_third" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="customViewStyle">@style/GlobalCustomViewStyle</item>
    </style>

    <style name="DefaultCustomViewStyle">
        <item name="rounding_radius">45</item>
        <item name="thickness_line">40</item>
        <item name="color_line">#000000</item>
    </style>

    <style name="GlobalCustomViewStyle" parent="@style/DefaultCustomViewStyle">
        <item name="color_line">#FF5b5b</item>
    </style>

</resources>